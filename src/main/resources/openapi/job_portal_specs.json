{
  "openapi": "3.0.0",
  "info": {
    "title": "Job Portal API",
    "version": "2.0.0"
  },
  "paths": {
    "/login": {
      "post": {
        "description": "Post request with username and password for logging in the application.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JwtRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Generated token for the logged user containing the id, email, role and expiration time.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          },
          "403": {
            "description": "Existing user account is locked.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          },
          "401": {
            "description": "The added credentials are invalid.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "description": "Adds a user in the Job Portal.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInformation"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User was successfully added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          },
          "406": {
            "description": "A problem occurred while trying to add the user in the Job Portal.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/request": {
      "post": {
        "description": "Sends a request to the admin to become an employer of the company.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Request was successfully sent to the admin.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "406": {
            "description": "User cannot become an employer. No request has been sent to the admin.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/categories": {
      "post": {
        "description": "Post request for creating new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CategoriesInformation"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Category was successfully created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          },
          "406": {
            "description": "Something went wrong. Category not created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/postings": {
      "post": {
        "description": "Post request for creating new posting",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostingsInformation"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Posting was successfully created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          },
          "406": {
            "description": "Something went wrong. Posting not created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          }
        }
      },
      "patch": {
        "description": "Patch request for creating updating posting",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostingInformationForUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Posting was successfully updated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          },
          "406": {
            "description": "Something went wrong. Posting not updated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "description": "Get request to return list of all postings",
        "responses": {
          "200": {
            "description": "List of postings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PostingsInformationComplete"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/postings/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "delete": {
        "summary": "Delete request for deleting a user after id.",
        "responses": {
          "200": {
            "description": "Posting was successfully deleted.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          },
          "406": {
            "description": "Something went wrong. Posting could not be deleted.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "JwtRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "AuthenticationResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "object"
          },
          "body": {
            "type": "string"
          }
        }
      },
      "UserInformation": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "firstname":{
            "type": "string"
          },
          "lastname": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "company": {
            "type": "string"
          }
        }
      },
      "CategoriesInformation": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "PostingsInformation": {
        "type": "object",
        "properties": {
          "postedById": {
            "type": "integer",
            "format": "int64"
          },
          "postedAt": {
            "type": "string",
            "format": "date"
          },
          "deadline": {
            "type": "string",
            "format":"date"
          },
          "numberOfViews": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "categoryId": {
            "type":"integer",
            "format": "int64"
          },
          "requirements": {
            "type": "string"
          }
        }
      },
      "PostingInformationForUpdate": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "deadline": {
            "type": "string",
            "format":"date"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "requirements": {
            "type": "string"
          }
        }
      },
      "PostingsInformationComplete": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "postedById": {
            "type": "integer",
            "format": "int64"
          },
          "postedAt": {
            "type": "string",
            "format": "date"
          },
          "deadline": {
            "type": "string",
            "format":"date"
          },
          "numberOfViews": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "categoryId": {
            "type":"integer",
            "format": "int64"
          },
          "requirements": {
            "type": "string"
          }
        }
      }
    }
  }
}