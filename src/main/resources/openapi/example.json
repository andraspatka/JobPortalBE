{
  "openapi": "3.0.0",
  "info": {
    "title": "Example API",
    "version": "2.0.0"
  },
  "paths": {
    "/hello": {
      "get": {
        "description": "Returns a sample response.",
        "responses": {
          "200": {
            "description": "A list of hellos.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Hello"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/world": {
      "get": {
        "description": "Returns another type of sample response from another endpoint.",
        "responses": {
          "200": {
            "description": "A list of worlds.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/World"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Hello": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "World": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}